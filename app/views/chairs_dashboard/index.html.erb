<div class="container">
  <h1>Chairs Dashboard</h1>
  <% @post_codes.each do |post_code| %>
    <div id="<%= @post_codes.find_index(post_code) %>">
      <h3><%= post_code %></h3>
      <table class="table table-hover">
        <%= render 'row',
            header: "Postal Code",
            data: post_code %>
        <%= render 'row',
            header: "Total Places",
            data: Shop.count_by_post(post_code) %>
        <%= render 'row',
            header: "Total Chairs",
            data: Shop.chairs_by_post(post_code) %>
        <%= render 'row',
            header: "Chairs Percent",
            data: "#{Shop.percent_chairs_at_post(post_code)}%" %>
        <%= render 'row',
            header: "Place with Max Chairs",
            data: Shop.place_with_max_chairs_at_post(post_code).name %>
        <%= render 'row',
            header: "Max Chairs",
            data: Shop.max_chairs_at_post(post_code) %>
      </table>
    </div>
  <% end %>
</div>
